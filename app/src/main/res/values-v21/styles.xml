<resources>>

    <style name="Text.Bold" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textColorDark</item>
    </style>

    <style name="Text.Primary" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textColorDark</item>
    </style>

    <style name="Text.Secondary.Small" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textColorGrey</item>
    </style>

    <style name="Text.Secondary" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textColorGrey</item>
    </style>

    <style name="TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">140</item>
    </style>
</resources>
